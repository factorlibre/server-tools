<openerp>
  <data>

    <record id="image_form_view" model="ir.ui.view">
        <field name="name">Multi image form</field>
        <field name="model">base_multi_image.image</field>
        <field name="inherit_id" ref="base_multi_image.image_form_view"/>
        <field name="arch" type="xml">
            <field name="url" position="after">
                <field name="s3_path" invisible="1"/>
                <field name="s3_url" attrs="{
                    'invisible': ['|', ('storage', '!=', 's3'), ('s3_path', '=', False)]
                }"/>
                <field name="s3_image_filename" invisible="1"/>
                <field name="s3_image_binary" attrs="{
                    'invisible': ['|', ('storage', '!=', 's3'), ('s3_url', '!=', False)]
                }" filename="s3_image_filename"/>
            </field>
        </field>
    </record>

  </data>
</openerp>